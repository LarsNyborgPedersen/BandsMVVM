<Window x:Class="WPFFrontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFFrontend"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Add Band" Command="{Binding AddBandCommand}" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button Content="Add Person" Command="{Binding AddPersonCommand}" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top"/>
        <ListBox ItemsSource="{Binding Bands}" DisplayMemberPath="Name" Height="200" VerticalAlignment="Bottom"/>
        <ListBox ItemsSource="{Binding People}" DisplayMemberPath="Name" Height="200" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
    </Grid>
</Window>
